<!DOCTYPE html>
<html>
  <head>
    <title>Ye Olde Item Shope</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <h1>Ye Olde Item Shope</h1>
    <div class="nav">
      <!--Link to Home-->
      <%= link_to "Home", front_page_path%>
      <!-- Search -->
      <% if(!@categories.nil?) then %>
        <div class="search">
          <%= form_tag("/index", :method => "get") do %>
            <%= text_field_tag 'search' %>
            <%= select_tag 'category', options_from_collection_for_select( @categories, 'name', 'name'), include_blank: 'All'%>
            <%= submit_tag 'Search', :name => nil %>
          <% end %>
        </div>
      <% end %>
      <!--login/out-->
      <% if(!user_signed_in?) then %>
        <%= link_to "Login", new_user_session_path %>
      <% else %>
        <%= link_to "Edit Information", edit_customer_path %>
        <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
      <% end %>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>

  <footer>
    <p>Pls no steal</p>
    <%= link_to "About", other_path(:page => "About") %>
    <%= link_to "Contact", other_path(:page => "Contact") %>
    <%= link_to 'Admin', admin_dashboard_path %>
  </footer>
</html>
