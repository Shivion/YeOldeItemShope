<!DOCTYPE html>
<html>
  <head>
    <title>Ye Olde Item Shope</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <h1>Ye Olde Item Shope</h1>
    <!--login here-->
    <div class="nav">
      <%= link_to "Home", front_page_path%>
      <% if(!@categories.nil?) then %>
        <%= form_tag("/index", :method => "get") do %>
          <div class="search">
            <%= text_field_tag 'search' %>
            <%= select_tag 'category', options_from_collection_for_select( @categories, 'name', 'name'), include_blank: 'All'%>
            <%= submit_tag 'Search', :name => nil %>
          </div>
        <% end %>
      <% end %>
    </div>
  </header>

  <body>
    <%= yield %>
  </body>

  <footer>
    <p>Pls no steal</p>
    <%= link_to "About", other_path(:page => "About") %>
    <%= link_to "Contact", other_path(:page => "Contact") %>
    <%= link_to 'Admin', admin_dashboard_path %>
  </footer>
</html>
